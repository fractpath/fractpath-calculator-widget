modules = ["nodejs-20"]

[workflows]
runButton = "Dev"

[[workflows.workflow]]
name = "Dev"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0 --port 3000"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 80
